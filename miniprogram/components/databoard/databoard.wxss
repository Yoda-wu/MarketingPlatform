.produce-card {
  background-color: #59a8f1; /* 背景色 */
  border-radius: 10px; /* 圆角 */
  padding: 20rpx; /* 内边距 */
  display: flex;
  flex-direction: column;
  align-items: center;
}

.today-date {
font-size: 28rpx; /* 字体大小 */
color: #FFF; /* 字体颜色 */
margin-bottom: 20rpx; /* 下边距 */
}

.marketing-data-container {
display: flex;
justify-content: space-evenly;
width: 100%; /* 宽度 */
}

.marketing-data-item {
display: flex;
flex-direction: column;
align-items: center;
}

.marketing-label {
font-size: 24rpx; /* 字体大小 */
color: #FFF; /* 字体颜色 */
}

.marketing-value {
font-size: 32rpx; /* 字体大小 */
color: #FFF; /* 字体颜色 */
margin-top: 10rpx; /* 上边距 */
}


.card-divider {
  width: 1px; /* 分隔线宽度 */
  height: 100rpx; /* 分隔线高度 */
  background-color: #FFF; /* 分隔线颜色 */
  margin: 0 20rpx; /* 分隔线与数据项的间隔 */
  }