/* pages/login/login.wxss */
page {
  width: 100%;
  height: 100%;
}

.page-container {
  /* background: linear-gradient(to bottom, #5eaffc, #f8f8f8); */
  background: #FFF;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.page-title {
  /* background: linear-gradient(to bottom, #4cc466, #FFF); */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80px;
  /* 可以根据需要调整正方形的边长 */
  height: 80px;
  /* 正方形的边长 */
  /* border: 1px solid #ccc; */
  border-radius: 100%;
  padding: 20rpx;
  background-color: #fff;
  position: absolute;
  top: 10%;
  /* left: 10%; */
  font-size: 60rpx;
  font-family: Helvetica;
  color: #000000;
  line-height: 100rpx;
  letter-spacing: 2rpx;

}

.select-color {
  color: #4a90e2;
}

.seller-and-buyertab {
  width: 100%;
  background-color: #fff;
}

.form-box {

  width: 100%;
  padding: 5px;
  margin: 0 0px;
  border-radius: 5px;
  top: 15%;
  background-color: #fff;
}

.desc {
  margin-top: 10px;
  padding: 5px;
  font-size: 10px;
  color: grey;
  /* background-color: aquamarine; */
}

.auth-box {
  width: 100%;
  height: 100%;
  z-index: 999;
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
  background-color: rgba(112, 112, 112, 1);
}

.card-box {
  width: 100%;
  height: 300px;
  text-align: center;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  /* background-color: aqua; */
}

.card-box image {
  width: 250px;
  height: 300px;
  background-color: #fff;
}

.card-content {
  width: 100%;
  height: 30px;
  margin: 0 auto;
  z-index: 9999;
  position: absolute;
  bottom: 15px;
  /* background-color: sandybrown; */
}

.card-content button {
  margin: 0 auto;
  background-color: #FF7583;
  color: #fff;
}

.login-container {
  /* background: linear-gradient(to bottom, #4cc466, #FFF); */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 300px;
  /* 可以根据需要调整正方形的边长 */
  height: 300px;
  /* 正方形的边长 */
  /* border: 1px solid #ccc; */
  border-radius: 10px;
  padding: 20rpx;
  background-color: #fff;
  /* box-shadow: 0 10px 10px rgba(0, 0, 0, 0.1); */
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  /* 使登录框居中 */
}

.input-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
  border-radius: 50rpx;
  background-color: rgb(245, 245, 245);
  /* 根据需要调整宽度 */
}

.icon {
  width: 48rpx;
  /* 图标宽度 */
  height: 48rpx;
  /* 图标高度 */
  margin-left: 20rpx;
  /* 图标与输入框的间隔 */
}

.input {
  flex: 1;
  padding: 10rpx;
  /* border: 1px solid #ccc; */
  border-radius: 5rpx;
}

.login-button {
  display: flex;
  /* 使按钮成为一个弹性容器 */
  justify-content: center;
  /* 主轴（水平方向）居中对齐 */
  align-items: center;
  /* 交叉轴（垂直方向）居中对齐 */
  width: 100%;
  /* 根据需要调整宽度 */
  padding: 20rpx 0;
  /* 增加上下内边距以增加按钮高度 */
  background-color: #4a90e2;
  color: white;
  border: none;
  border-radius: 16rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  /* 确保内边距不会增加按钮的总宽度 */
}

.register {
  margin-top: 20rpx;
  color: #4a90e2;
}

.register navigator {
  margin-left: 10rpx;
}

.register-link:active {
  background-color: rgb(197, 195, 195);
}

.options {
  flex-direction: column;
  display: flex;
  justify-content: flex-start;
  /* 使子元素靠右对齐 */
  width: 100%;
  margin-top: 10rpx;
}

.options text {
  margin-right: 5rpx;
  /* 子元素之间的间隔 */
  font-size: 26rpx;
}

.options navigator {
  color: #4a90e2;
  /* 链接颜色 */
  font-size: 26rpx;
}


.register {
  display: flex;
  /* 使用Flexbox布局 */
  /* align-items: flex-start; 垂直居中对齐 */
  justify-content: flex-start;
  /* justify-items: flex-start; */
  margin-top: 20px;
  /* 与上方内容的间隔 */
}


.register-link {
  margin-left: 10px;
  /* 与“还没有账号”文本的间隔 */
  color: #4a90e2;
  /* 链接颜色，可以根据需要调整 */
}

.picker {
  flex: 1;
}