.product-info {
  background-color: #FFF;
  display: flex;
  align-items: center;

  /* border-top: 1px solid rgb(184, 182, 182); */
  border-bottom: 1px solid rgb(184, 182, 182);
  border-radius: 10px;
  margin: 10px;
  flex-direction: column;
}

.product-header {
  display: flex;
  width: 100%;
  background-color: #40A2FF;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10px;
  /* height: 30px; */
}

.product-name {
  display: flex;
  color: #FFF;
  font-size: medium;

}

.product-image {
  width: 160rpx;
  /* 图片宽度 */
  height: 160rpx;
  /* 图片高度 */
  /* margin-right: 20rpx; */
  padding-bottom: 4%;
  /* 图片与文本的间隔 */
}

.product-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.product-details-list {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding-bottom: 4%;
  width: 60%;
}

.product-details-item {
  width: 100%;
  display: flex;
}

.info-title {
  flex: auto;
  color: #928f8f;
}

.info-value {
  display: inline;
  color: #101010;
  font-weight: bold;
}

.edit-btn {
  padding: 0%;
  width: 120rpx !important;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #1890FF;
  color: #FFF;
  font-size: 16%;
  margin-bottom: 2%;
  border-radius: 20px;
}