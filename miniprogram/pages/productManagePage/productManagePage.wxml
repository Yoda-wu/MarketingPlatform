<van-tabs active="{{total}}" class="product-manage" color="#40A2FF" title-active-color="#40A2FF">
  <van-tab class="total-tab" title='汇总' name="total">
    <view class="product-info" wx:for="{{products}}" wx:key="index">
      <view class='product-header'>
        <text class="product-name">{{item.name}}</text>
      </view>
      <view class="product-details">
        <image class="product-image" src="../../images/mushroom.jpg"></image>
        <view class='product-details-list'>
          <view class='product-details-item'>
            <text class='info-title'>库存：</text><text class='info-value'>{{item.stock}}斤</text>
          </view>
          <view class="product-details-item">
            <text class='info-title'>总销售：</text><text class='info-value'>{{item.totalSales}}斤</text>
          </view>
          <view class="product-details-item">
            <text class='info-title'>今日产出：</text><text class='info-value'>{{item.todayProduction}}斤</text>
          </view>
          <view class="product-details-item">
            <text class='info-title'>今日销售：</text><text class='info-value'>{{item.todaySales}}斤</text>
          </view>
        </view>
      </view>
      <button class='edit-btn' bindtap='EditProduct'>编 辑</button>
    </view>

  </van-tab>
  <van-tab class="total-tab" title='供应量' name="supply">
  </van-tab>
  <van-tab class="total-tab" title='供应量' name="make-deal">
  </van-tab>
</van-tabs>